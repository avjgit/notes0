<h1><%= @post.title %></h1>

<%= @post.text %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<%= link_to 'Delete', @post, :method => :delete, :confirm => "really?" %>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p><%= comment.text %></p>
  <p><%= time_ago_in_words comment.created_at %></p>
  <p><%= link_to "Delete this!", [@post, comment], :method => :delete, :confirm => "yes?" %></p>
<% end %>

<%= form_for [@post, @post.comments.build] do |f| %>
  <p><%= f.text_area :text, :size => '40x10' %></p>
  <p><%= f.submit 'Post it' %></p>
<% end %>
