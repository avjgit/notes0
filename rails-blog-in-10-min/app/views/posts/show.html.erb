<h1><%= @post.title%></h1>

<%= @post.text =>


<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Text:</b>
  <%= @post.text %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
|
<%= link_to 'Delete', @post, :method => :delete, :confirm => "Are you sure?" %>

<h2>Comments</h2>

<% @post.comments each do |comment| %>
  <p><%= comment.text%></p>
  <p><%= time_ago_in_words comment.created_at%></p>
<% end %>

